<theme>
    <formatVersion>4</formatVersion>

    <include>./../crt.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.png</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.png</path>
      </image>

      <image name="band1" extra="true">
        <color>5f6064</color>
      </image>

      <image name="band2" extra="true">
        <color>DFDED1</color>
      </image>

      <image name="band3" extra="true">
        <color>fcc94b</color>
      </image>

      <image name="band4" extra="true">
        <color>e4540d</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.png</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>33709F</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed">
      <image name="logo">
        <path>./logo.png</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>33709F</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>33709F</selectorColor>
      </textlist>
    </view>
</theme>
