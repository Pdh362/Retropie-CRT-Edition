<theme>
    <formatVersion>4</formatVersion>

    <include>./../crt.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.png</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.png</path>
      </image>

      <image name="band1" extra="true">
        <color>6fa468</color>
      </image>

      <image name="band2" extra="true">
        <color>567496</color>
      </image>

      <image name="band3" extra="true">
        <color>c66155</color>
      </image>

      <image name="band4" extra="true">
        <color>c7ab4a</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.png</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>c19528</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed, video">
      <image name="logo">
        <path>./logo.png</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>c19528</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>c19528</selectorColor>
      </textlist>
    </view>
</theme>
