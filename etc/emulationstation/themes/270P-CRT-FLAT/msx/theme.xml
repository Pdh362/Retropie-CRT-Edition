<theme>
    <formatVersion>4</formatVersion>

    <include>./../crt.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.png</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.png</path>
      </image>

      <image name="band1" extra="true">
        <color>f86745</color>
      </image>

      <image name="band2" extra="true">
        <color>242d32</color>
      </image>

      <image name="band3" extra="true">
        <color>42494c</color>
      </image>

      <image name="band4" extra="true">
        <color>575f62</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.png</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>242d32</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed, video">
      <image name="logo">
        <path>./logo.png</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>242d32</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>242d32</selectorColor>
      </textlist>
    </view>
</theme>
