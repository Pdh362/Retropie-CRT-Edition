<theme>
	<formatVersion>4</formatVersion>
	
	<!-- System View -->
	<view name="system">	
		<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./common/images/binding_dark.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<tile>true</tile>
		</image>
		
		<image name="bottom" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.0655</size>
			<color>000000</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
			<color>3D3D3D</color>
		</image>
		
		<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.19</pos>
			<maxSize>0.5 0.325</maxSize>
			<color>A0A0A0</color>
		</image>

		<!-- Page Layout -->
		<helpsystem name="help">
			<textColor>5E5E5E</textColor>
			<iconColor>5E5E5E</iconColor>
		</helpsystem>
	</view>


	<!-- Game View - All -->
	<view name="basic, detailed, video">
		<!-- Page Layout -->
		<image name="background" extra="true">		
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<tile>true</tile>
			<path>./common/images/binding_dark.png</path>
		</image>
		
		<image name="top" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.16</size>
			<color>000000</color>
		</image>
		
		<image name="top-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 0.161</pos>
			<size>1 0.004</size>
			<color>3D3D3D</color>
		</image>
		
		<image name="bottom" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.0655</size>
			<color>000000</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
			<color>3D3D3D</color>
		</image>
		
		<!-- System Specific Images -->
		<image name="logo">
			<!-- Left Aligned at Top -->
			<origin>0 0.5</origin>
			<pos>0.03 0.0775</pos>
			<maxSize>0.55 0.12</maxSize>
		</image>
		
		<image name="overlay" extra="true">
			<!-- Right Aligned at Top -->
			<origin>1 0.5</origin>
			<pos>0.97 0.0775</pos>
			<maxSize>0.37 0.13</maxSize>
			<color>5E5E5E</color>
		</image>
		
		<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0.024 0.16</pos>
			<size>0.482 0.7745</size>
			<color>000000AA</color>
		</image>
		
		<textlist name="gamelist">
			<fontPath>./common/fonts/OpenSans-Bold.ttf</fontPath>
			<pos>0.027 0.17</pos>
			<size>0.48 0.762</size>
			<lineSpacing>1.35</lineSpacing>
			<fontSize>0.039</fontSize>
			<horizontalMargin>0.015</horizontalMargin>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
			<primaryColor>A0A0A0</primaryColor>
			<secondaryColor>A0A0A0</secondaryColor>
			<selectorColor>990000</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<selectorHeight>0.0485</selectorHeight>
			<selectorOffsetY>-0.0017</selectorOffsetY>

		</textlist>

		<!-- Page Layout -->
		<helpsystem name="help">
			<textColor>5E5E5E</textColor>
			<iconColor>5E5E5E</iconColor>
		</helpsystem>
	</view>


	<!-- Game View - Basic -->
	<view name="basic">
	<!-- Page Layout -->
		<image name="overlay" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.715 0.55</pos>
			<maxSize>0.51 0.7</maxSize>
			<color>FFFFFF18</color>		
		</image>
		
		<!-- GAME LIST - SANS IMAGES-->
		<image name="gamelist-matte" extra="true">
			<size>0.486 0.7745</size>
		</image>
		
	</view>


	<!-- Game View - Detailed -->
	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.75215 0.55</pos>
			<maxSize>0.388 0.6898</maxSize>
		</image>
	</view>
	<view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.75215 0.55</pos>
			<maxSize>0.388 0.6898</maxSize>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<delay>1.5</delay>
		</video>
	</view>
</theme>
