<theme>
    <formatVersion>4</formatVersion>
	
	<view name="system, basic, detailed">
		<image name="system_help" extra="true">
			<path>./common/images/system_help.png</path>
			<pos>0.96 0.98</pos>
			<origin>1 1</origin>
			<size>0.500 0</size>
			<zIndex>100</zIndex>
		</image>
	<helpsystem name="help">
		<textColor>000000</textColor>
		<iconColor>000000</iconColor>
		<pos>0 1.5</pos>
		<fontSize>0.03</fontSize>
	</helpsystem>

	</view>

	<!-- System View -->
	<view name="system">	
		<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./common/images/binding_dark_v.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<tile>true</tile>
		</image>
		<text name="systemInfo">
				<size>1 0.050</size>
				<backgroundColor>FFFFFFAA</backgroundColor>
				<color>000000</color>
				<fontSize>0.027</fontSize>
		</text>
		<image name="bottom" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>			
			<size>1 0.0655</size>
			<color>000000</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
			<color>3D3D3D</color>
		</image>
		
		<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.19</pos>			
			<maxSize>0.5 0.325</maxSize>
			<color>A0A0A0</color>
		</image>

	</view>

	<!-- Game View - All -->
    <view name="basic, detailed">
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./common/images/binding_dark_v.png</path>		
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<tile>true</tile>
		</image>
		
		<image name="top" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.16</size>
			<color>000000</color>
		</image>
		
		<image name="top-highlight" extra="true">
			<path>./common/images/whiter.png</path>
			<origin>0 1</origin>
			<pos>0 0.161</pos>
			<size>1 0.004</size>
			<color>3D3D3D</color>
		</image>
		
		<image name="bottom" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.0655</size>
			<color>000000</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
			<color>3D3D3D</color>
		</image>
		<image name="gamelist_help" extra="true">
			<path>./common/images/gamelist_help.png</path>
			<pos>0.96 0.98</pos>
			<origin>1 1</origin>
			<size>0.657 0</size>
			<zIndex>100</zIndex>
		</image>
		<!-- System Specific Images -->
		<image name="logo">			
			<!-- Left Aligned at Top -->
			<origin>0 0.5</origin>
			<pos>0.03 0.0775</pos>
			<size>0 0.12</size>
		</image>
		
		<image name="overlay" extra="true">
			<!-- Right Aligned at Top -->
			<origin>1 0.5</origin>
			<pos>0.97 0.0775</pos>
			<maxSize>0.37 0.13</maxSize>
			<color>5E5E5E</color>
		</image>

		<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<color>000000AA</color>
		</image>
	
		<textlist name="gamelist">
			<primaryColor>A0A0A0</primaryColor>
			<secondaryColor>A0A0A0</secondaryColor>
			<selectorColor>990000</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
		</textlist>
	</view>
	<!-- Game View - Basic -->
	<view name="basic">
		<!-- Page Layout -->
		<image name="overlay" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.715 0.55</pos>
			<maxSize>0.51 0.7</maxSize>
			<color>FFFFFF18</color>	
		</image>

		<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0.02 0.165</pos>
			<size>0.96 0.76</size>
		</image>
		
		<textlist name="gamelist">
			<fontPath>./common/fonts/OpenSans-Bold.ttf</fontPath>
			<pos>0.019 0.16</pos>
			<size>0.96 0.74</size>
			<fontSize>0.02</fontSize>
			<lineSpacing>1.31</lineSpacing>
			<horizontalMargin>0.015</horizontalMargin>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
		</textlist>
	</view>


	<!-- Game View - Detailed -->
	<view name="detailed">
		<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0.02 0.555</pos>
			<size>0.96 0.37</size>
		</image>
		
		<textlist name="gamelist">
			<fontPath>./common/fonts/OpenSans-Bold.ttf</fontPath>
			<pos>0.019 0.56</pos>
			<size>0.96 0.34</size>
			<fontSize>0.0275</fontSize>
			<lineSpacing>1.384</lineSpacing>
			<horizontalMargin>0.015</horizontalMargin>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
		</textlist>

		<!-- Game Image 600x600 -->
		<image name="image-matte" extra="true">
			<path>./common/images/white.png</path>
			<origin>0.0 0.0</origin>
			<pos>0.02 0.17</pos>
			<size>0.96 0.48</size>
			<color>000000AA</color>
		</image>
		
		<image name="md_image">
			<origin>0 0.5</origin>
			<pos>0.05 0.35</pos>
			<size>0.35 0.35</size>
		</image>

		<!-- Metadata -->
	</view>
	
</theme>
