<theme>

    <formatVersion>4</formatVersion>
    <include>./../common.xml</include>	

	<view name="system">

	<sound name="bgsound"> <path>./system.ogg</path> </sound>
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logo.png</path>
        </image>
		
		<image name="overlay" extra="true">
			<path>./controller.png</path>
		</image>
	</view>

	<view name="basic, detailed">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logo.png</path>
		</image>
		
		<image name="overlay" extra="true">
			<path>./controller.png</path>
		</image>
	</view>
	
	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.35</pos>
			<size>0 0.40</size>
		</image>
	</view>
</theme>
